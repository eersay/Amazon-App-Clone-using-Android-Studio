<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded Corners -->
    <corners android:radius="10dp" />

    <!-- Border/Stroke -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Light grey border -->

    <!-- Padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <!-- Shadow/Elevation (optional, works for API 21+) -->
    <shadowColor android:color="#55000000" />
    <shadowSize android:width="4dp" />
</shape>